<nav role="navigation" class="admin dark-bg full-width flex spaced-between top-nav">

  <!-- menu - logo -->
  <div class="flex nav-area">
    <div class="clickable flex icon">

      <div class="padded desktop-only light-fill medium-svg menu icon" data-action="click->sidebar#toggle">
        <%= link_to admin_path, aria: { label: admin_path('home') } do %>
          <%= inline_svg('logo_icon.svg') %>
        <% end %>
      </div>

      <div class="flex mobile-only tablet-only center-aligned clickable toggle">
        <div class="padded margin-sides menu standard-svg icon" data-action="click->sidebar#toggle">
          <%= inline_svg('icons/menu.svg') %>
        </div>
      </div>

    </div>
  </div>

  <div class="flex nav-area">
    <div class="padded mobile-only tablet-only light-fill medium-svg menu icon" data-action="click->sidebar#toggle">
      <%= link_to admin_path, aria: { label: admin_path('home') } do %>
        <%= inline_svg('logo_icon.svg') %>
      <% end %>
    </div>
    <!-- large screen nav -->
    <div class="flex auto-marg navlist desktop-only">
      <%= link_to 'Dashboard',
                  admin_path,
                  class: "link #{url_contains?('active', 'dashboard')}" %>

    </div>
  </div>

