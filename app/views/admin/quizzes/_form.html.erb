
<%= form_for(@admin_quiz) do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= form.input :title %>
    <%= form.input :information %>
    <%= form.input :description %>
    <%= form.input :duration %>
    <%= form.input :status %>
    <%= form.input :slug %>
    <%= form.input :published_at %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
