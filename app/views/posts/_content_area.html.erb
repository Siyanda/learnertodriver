<div class="flex full-width rounded shadowed basic-border max-content column white-bg post">

    <div class="post-header">
      <h1 class="post-title">
        <%= post.title %>
      </h1>
    </div>

    <div class="post-content">
      <div class="post-body">
        <%= sanitize from_markdown(liquidize(post.content)) %>
      </div>
    </div>

    <div class="post-footer">
      <div class="flex center-aligned spaced-between post-meta">
        <div class="flex center-aligned">
          <div class="gray-stroke small-svg icon"><%= inline_svg('icons/clock.svg') %></div>
              <p class="post-date">Posted
              <%= content_tag(:span, nil, data: { 'dayjs-time-ago-target': 'formattedTime', controller: 'dayjs-time-ago', 'dayjs-time-ago-time-stamp-value': post.created_at.iso8601 }, class: 'date-value') %>
              </p>
          </div>

    </div>
  </div>
</div>
