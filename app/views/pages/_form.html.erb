<%= simple_form_for @page do |f| %>
  <div class="flex column">

    <div class="full-width">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "basic-border" %>
    </div>

    <div class="full-width">
      <%= f.label :layout, class: "form-label" %>
      <%= f.text_field :layout, class: "basic-border" %>
    </div>
  </div>

<div class="flex column">
    <div class="full-width">
    <%= f.label :slug, class: "form-label" %>
    <%= f.text_field :slug, class: "basic-border" %>
    </div>
    <div class="full-width">
    <%= f.label :status, class: "form-label" %>
    <%= f.input :status, class: "form-label half-width", as: :radio_buttons, collection: ['draft', 'unpublished', 'published', 'restricted'] %>
    </div>
  </div>

  <div class="flex column">
    <div class="full-width">
      <%= f.label "Page Editor", class: "form-label" %>
      <%= f.select :editor_id, collection: @editors, class: "full-width" %>
    </div>

    <div class="full-width">
      <%= f.label "Parent Page", class: "form-label" %>
      <%= f.select :parent_id, collection: @pages, class: "full-width" %>
    </div>
  </div>
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, class: "basic-border form-textarea" %>

  <div class="flex spaced-between">
    <%= link_to 'Back', posts_path, class: 'white-text padded rounded button' %>
    <%= f.submit class: 'white-text padded rounded button' %>
  </div>
<% end %>
