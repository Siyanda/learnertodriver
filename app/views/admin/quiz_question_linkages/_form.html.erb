
<%= form_for(@admin_quiz_question_linkage) do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= form.association :question %>
    <%= form.association :quiz %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
