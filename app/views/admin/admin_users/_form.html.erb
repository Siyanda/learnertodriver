
<%= form_for(@admin_admin_user) do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= form.input :email %>
    <%= form.input :password_digest %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
