
<%= form_for(@admin_question) do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= form.input :content %>
    <%= form.input :kind %>
    <%= form.input :information %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
